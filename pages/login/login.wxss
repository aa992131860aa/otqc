  border-left-width: 0px;
  border-top-width: 0px;
  border-right-width: 0px;
  border-bottom-color: #d7d7d7;
  padding-left: 10rpx;
  margin-left: 24rpx;
  width: 388rpx;
  height: 60rpx;
  text-align: left;
  color: #1d4499;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

