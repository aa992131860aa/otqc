  width: 44rpx;
  height: 44rpx;
}

.title {
  margin-left: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #050505;
  float: left;
}

.line {
  height: 1rpx;
  background-color: #fff;
}

.line_inner {
  margin-left: 32rpx;
